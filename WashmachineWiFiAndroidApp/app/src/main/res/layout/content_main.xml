<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity"
>

    <ImageView
            android:layout_width="67dp"
            android:layout_height="69dp" app:srcCompat="@drawable/refresh"
            android:id="@+id/refresh_image"
            android:layout_marginTop="520dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="252dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Power ON"
            android:layout_width="119dp"
            android:layout_height="51dp"
            android:id="@+id/btn_power_on"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_connection_state" android:layout_marginTop="12dp"/>
    <Button
            android:text="Power OFF"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/btn_power_off"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_pause"/>
    <Button
            android:text="START"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/btn_start"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/btn_power_on"/>
    <Button
            android:text="PAUSE"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/btn_pause"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_start"/>
    <TextView
            android:text="conn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_connection_state"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toTopOf="@+id/textViewAddress" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.011"/>
    <TextView
            android:text="Address: "
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:id="@+id/textViewAddress" tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="ipAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAddressField"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textViewAddress"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/drain"
            android:id="@+id/drain_image" tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/spin_image" android:layout_marginEnd="93dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/end"
            android:id="@+id/end_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/drain_image" android:layout_marginEnd="93dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="67dp"
            android:layout_height="67dp" app:srcCompat="@drawable/lock"
            android:id="@+id/lock_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/end_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/spin"
            android:id="@+id/spin_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/rinse_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="93dp"/>
    <ImageView
            android:layout_width="85dp"
            android:layout_height="40dp" app:srcCompat="@drawable/rinse"
            android:id="@+id/rinse_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/wash_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="75dp"/>
    <ImageView
            android:layout_width="52dp"
            android:layout_height="50dp" app:srcCompat="@drawable/wash"
            android:id="@+id/wash_image"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/play_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="91dp"/>
    <ImageView
            android:layout_width="67dp"
            android:layout_height="69dp" app:srcCompat="@drawable/play"
            android:id="@+id/play_image"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.01"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/group" app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toStartOf="parent"
                                            app:layout_constraintBottom_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/group2" app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toStartOf="parent"
                                            app:layout_constraintBottom_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>